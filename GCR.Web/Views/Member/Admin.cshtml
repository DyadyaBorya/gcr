@model IEnumerable<GCR.Web.Models.MemberViewModel>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Member Admin";
}


<h2>Member Admin</h2>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MemberSince)
                </th>
                <th>Has Photo
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MemberSince)
                    </td>
                    <td>
                      @Html.DisplayFor(modelItem => item.HasPhoto)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.MemberId }) &nbsp;|&nbsp;
                        @using (Html.BeginForm("Delete", "Member", FormMethod.Post, new { @class = "inline"}))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("id", item.MemberId)
                            <a onclick="$(this).parent().submit()">Delete</a>
                            
                        }
                    </td>
                </tr>
            }

        </table>



