@model GCR.Web.Models.NewsViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewBag.PageTitle</h2>

@using (Html.BeginForm())
{
    <div class="two row">
        <div class="twelve columns">
            @Html.Message()
        </div>
    </div>
    <div class="one row" style="position:relative">
        <div class="two columns alpha editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="fifteen columns omega editor-field">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new {style = "width:450px"}})
        </div>
    </div>
    <div class="one row" style="margin-bottom:1em">
        <div class="two columns alpha editor-label">
            @Html.LabelFor(model => model.Summary)
        </div>
        <div class="fifteen columns omega editor-field">
            @Html.TextAreaFor(model => model.Summary, new {style = "height:70px;width:450px"})
        </div>
    </div>
    <div class="one row">
        <div class="two columns alpha editor-label">
            @Html.LabelFor(model => model.Article)
        </div>
        <div class="fifteen columns omega editor-field">
            @Html.TextAreaFor(model => model.Article)
        </div>
    </div>
    <div class="one row">
        <div class="fifteen columns omega offset-by-two editor-field">
            <input type="submit" value="Save" style="padding-left:1.4em; padding-right:1.4em" />&nbsp;&nbsp;
                @Html.ActionLink("Back to List", "Admin", null, new { @class = "button" })
        </div>
    </div>
}

@section Scripts {
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script type="text/javascript">
        $(function () {
            CKEDITOR.replace('Article', {
                height: "250"
            });
            $("#Summary").charCount();
        });
    </script>
}

